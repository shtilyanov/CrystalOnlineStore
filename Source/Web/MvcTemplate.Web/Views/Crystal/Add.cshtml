@model OnlineCrystalStore.Web.ViewModels.Crystal.CrystalViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "Crystal", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Add an item.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-2">
           @Html.EditorFor(m => m.Price , new { @class = "form-control k-textbox" })
        </div>
    </div>

    @Html.EditorFor(m => m.Name)

    @Html.EditorFor(m => m.Size)

    @Html.EditorFor(m => m.Weight)

    @Html.EditorFor(m => m.Description)

    @Html.EditorFor(m => m.Mine)

    <div class="form-group">
        @Html.LabelFor(m => m.UploadedCrystalImage, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="UploadedCrystalImage" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
